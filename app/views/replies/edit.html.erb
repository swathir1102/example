<div class="container" style="margin-top: 30px">
  <div class="card">
    <div class="card-header">
        <h3 class="title is-2 has-text-grey">Editing Reply</h3>
    </div>
    <div class="card-body">
      <%= simple_form_for([@discussion, @reply]) do |f| %>
        <div class="form-group row">
          <div class="col-sm-12">
            <%= f.input :reply, input_html: { class: 'form-control' }, wrapper: false, label_html: { class: 'col-form-label' } %>
          </div>
      </div>
      <%= f.button :submit, 'Update reply', class:'btn btn-warning' %>

      <% end %>
    </div>
  </div>
</div>