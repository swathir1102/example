<%= simple_form_for([@discussion, @discussion.replies.build], remote: true) do |f| %>

<div class="form-group row">
  <div class="col-sm-12">
    <%= f.input :reply, input_html: { class: 'form-control' }, wrapper: false, label_html: { class: 'col-form-label' } %>
  </div>
</div>

<%= f.button :submit, 'Leave a reply', class:'btn btn-info' %>

<% end %>
