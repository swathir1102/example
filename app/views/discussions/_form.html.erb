<%= simple_form_for(@discussion) do |f| %>
  <%= f.error_notification %>


  <div class="form-group row">
    <div class="col-sm-12">
      <%= f.input :title, required: true, input_html: { class: 'form-control' }, wrapper: false%>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-12">
      <%= f.input :content, required: true, input_html: { class: 'form-control' }, wrapper: false %>
    </div>
  </div>

  <div class="form-group row">
    <label class=" col-sm-12 col-form-label">Course</label>
    <div class="col-sm-12 control has-icons-left">
      <span class="select">
        <%= f.input_field :course_id, collection:  Course.all.collect { |c| [c.title, c.id] }, prompt: "Select course" ,class: "form-control"%>
      </span>
      <span class="icon is-small is-left">
        <i class="fa fa-tag"></i>
      </span>
    </div>
  </div>

  <div class="form-group row">
    <div style="margin-left: 10px;">
      <%= f.button :submit, class:"btn btn-outline-success" %>
    </div>
  </div>

<% end %>
