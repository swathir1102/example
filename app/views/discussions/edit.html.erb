<div class="container" style="margin-top: 30px">
  <div class="card">
    <div class="card-header">
      <h3>Editing Discussion</h3>
    </div>
    <div class="card-body">
      <%= render 'form', discussion: @discussion %>
    </div>

    <div class="row" style="margin-top: 10px; ">
      <div class="btn-group" role="group" aria-label="Basic example" style="margin-left: 15px">
        <%= link_to 'Show', @discussion, class: "btn btn-outline-info" %>
        <%= link_to 'Back', discussions_path, class: "btn btn-info" %>
      </div>
    </div>

  </div>
</div>