<div class="container">
  <div class="row">
    <div class="col-sm-10">
      <h1 style="margin-left: 15px">Courses</h1>
    </div>
    <div class="col-sm-2">
      <h1><%= link_to 'View Courses', courses_path ,class: "btn btn-success"%></h1>
    </div>
  </div>
  <table class="table table-hover">
    <thead class="bg-secondary">
      <tr>
        <th>Title</th>
        <th>Level</th>
        <th>Instructor</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% current_user.enrollments.each do |enroll| %>
        <tr>
          <td><%= enroll.course.title %></td>
          <td><%= enroll.course.level %></td>
          <td><%= enroll.course.instructor %></td>
          <td style="text-align: right;">
            <%= link_to 'Show', course_url(:id => enroll.course.id) ,class: "btn btn-outline-info btn-sm"%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>


