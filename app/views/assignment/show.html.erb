
<div class="container" style="margin-top: 30px">
  <div class="card">
    <div class="card-header">
      <div class="row">
        <div class="col-sm-9"><h3>Assignments</h3><small></div>
         <% @submission = Submission.find_by_id(:assignment_id => @assignment.id) %>
            <% puts @submission  %>
             <% puts 'Im here' %>
          <% if current_user.student? && @submission.present? == true  %>
            <div class="col-sm-1"><%= link_to 'View Submission',  @submission.document.url , target: :_blank, class: "btn btn-secondary" %></div>
             <div class="col-sm-1"><%= link_to 'Assignments', assignment_index_path(:course_id => @course.id), class: "btn btn-secondary" %></div>
           <% else %>
             <div class="col-sm-1"><button type="button" class="btn btn-secondary disabled" >Submission Pending </button></div>
             <div class="col-sm-1"><%=link_to 'Submit Assignment', assignment_new_path(@assignment.id) , class: "btn btn-secondary" %></div>
           <% end %> 
      </div> 
    </div>
    <div class="card-body">
      <p id="notice"><%= notice %></p>
      <p>
        <% puts @assignment.id %>
        <strong>Title:</strong>
        <%= @assignment.title %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @assignment.description %>
      </p>

      <p>
        <strong>Status:</strong>
          <% if @assignment.deadline < Date.today %>
            <div class="invalid-feedback"> Completed. </div>
          <% else %>
            <div class="valid-feedback"> On-Going. </div>
          <% end %>
      </p>


    </div>
    <div class="row" style="margin-top: 10px;">
      <div class="btn-group" role="group" aria-label="Basic example" style="margin-left: 15px">
        <%= link_to 'Home', root_path, class: "btn btn-outline-info" %>
        <%= link_to 'Back', assignment_index_path, class: "btn btn-outline-info" %>
      </div>
    </div>
  </div>
</div>
            


